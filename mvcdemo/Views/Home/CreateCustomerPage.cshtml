@{
    ViewData["Title"] = "Create Customer Page";
}

<h1>@ViewData["Title"]</h1>

<section class="h-100 bg-light">
  
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
            
              <img src="https://thumbs.dreamstime.com/b/contact-us-icons-white-cube-blocks-blue-background-vertical-style-concept-company-website-faq-hotline-phone-number-call-address-292144883.jpg"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; width: 900px;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Customer</h3>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="form3Example1m">First name</label>
                      <input type="text" id="form3Example1m" class="form-control form-control-lg" />
                    
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                    <label class="form-label" for="form3Example1n">Last name</label>
                      <input type="text" id="form3Example1n" class="form-control form-control-lg" />
                      
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                    <label class="form-label" for="form3Example1m1">Phonenumber</label>
                      <input type="text" id="form3Example1m1" class="form-control form-control-lg" />
                      
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                     <label class="form-label" for="form3Example1n1">Email</label>
                      <input type="text" id="form3Example1n1" class="form-control form-control-lg" />
                     
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                 <label class="form-label" for="form3Example8">Password</label>
                  <input type="text" id="form3Example8" class="form-control form-control-lg" />
                 
                </div>
                <div class="form-outline mb-4">
                 <label class="form-label" for="form3Example8">Message</label>
                  <input type="text" id="form3Example8" class="form-control form-control-lg" />
                   <button type="button" class="btn btn-primary btn-block mb-4">Submit</button>
                 
                </div>

                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
